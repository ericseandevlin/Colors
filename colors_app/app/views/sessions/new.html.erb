<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Login</h1>
    <h2><%= @status %></h2>
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :password %>
        <%= f.password_field :password_hash %>

      <%= f.submit "log in"%>
    <% end %><br>
    <div class="buttons"><%= link_to '<button type="button">Sign Up</button>'.html_safe, new_user_path %></div>
  </body>
</html>
