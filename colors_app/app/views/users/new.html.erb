<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Register</h1>
    <%= form_for(:user, url: '/users', :method => 'post') do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %><br>

        <%= f.label :password %>
        <%= f.password_field :password_hash %><br>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %><br>

      <%= f.submit "Register"%>
    <% end %>
  </body>
</html>
